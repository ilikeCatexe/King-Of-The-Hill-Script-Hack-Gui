}


Section1:CreateDropdown("Sound Id List ", {
   List = music,
   Default = "Nil"}, function(value)
      print(value)
      setclipboard(value)
end)

local Page1 = windowz:CreatePage("Setting")
local Section1 = Page1:CreateSection("Setting")

Section1:CreateButton("Destroy UI", function ()
    game.CoreGui:FindFirstChild("CFAHubPremium2022"):Destroy()
end)
Section1:CreateButton("Press ] to open/close UI", function ()
end)


local mouse = game.Players.LocalPlayer:GetMouse()
mouse.KeyDown:Connect(function(key)
    if key == "]" then
        game.CoreGui:FindFirstChild("CFAHubPremium2022").Enabled = not game.CoreGui:FindFirstChild("CFAHubPremium2022").Enabled
    end
end)

